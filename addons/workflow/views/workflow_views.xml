<odoo>
    <record id="view_workflow_form" model="ir.ui.view">
        <field name="name">custom.workflow.form</field>
        <field name="model">custom.workflow</field>
        <field name="arch" type="xml">
            <form string="Workflow">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="States">
                            <field name="state_ids" widget="one2many_list">
                                <list editable="bottom">
                                    <field name="priority"/>
                                    <field name="name"/>
                                    <field name="approver_group_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_tree" model="ir.ui.view">
        <field name="name">custom.workflow.tree</field>
        <field name="model">custom.workflow</field>
        <field name="arch" type="xml">
            <list string="Workflow">
                <field name="name"/>
                <field name="model_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="workflow_action" model="ir.actions.act_window">
        <field name="name">Workflow</field>
        <field name="res_model">custom.workflow</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <data>
        <menuitem id="root_menu" name="Workflow">
            <menuitem id="menu_workflow" action="workflow_action"/>
        </menuitem>
    </data> -->
</odoo>
